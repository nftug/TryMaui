<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="TryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TryMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">
    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="List">
            <ShellContent ContentTemplate="{DataTemplate views:ListViewPage}" Route="ListViewPage" />
        </Tab>
        <Tab Title="Test">
            <ShellContent ContentTemplate="{DataTemplate views:TestViewPage}" Route="TestViewPage" />
        </Tab>
    </TabBar>
</Shell>
